* {
    font-family: 'Microsoft YaHei';
    font-size: 14px;
    padding: 0;
    margin: 0;
    border: none;
    border: 1px solid red;
    outline: none;
}

QPushButton {
    border: none;
}
QPushButton:hover {
    /*background: #373737;*/
}
QPushButton:pressed {
    /*background: #22252a;*/
}

QLabel {
}

QLineEdit {
    border: none;
    padding: 2px 4px;
}

/** scroll bar */
QAbstractScrollArea * {
    background: transparent;
}
QScrollBar:horizontal {
    height: 13px;
    background: transparent;
}
QScrollBar:vertical {
    width: 13px;
    background: transparent;
}
QScrollBar::handle:vertical,
QScrollBar::handle:horizontal {
    border: 1px solid #2d3035;
    border-radius: 1px;
    background: #56595e;
}
QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
    background: #696c71;
}
QScrollBar::handle:vertical:pressed,
QScrollBar::handle:horizontal:pressed {
    background: #86898e;
}
QScrollBar::add-line:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::sub-page:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::add-page:horizontal,
QScrollBar::sub-line:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

QWidget[widgetType='panel'] {
    border: 1px solid #1f2227;
}

/************************/
/** Aproch Widget Start */
/************************/
/** caption */
aproch--ACaptionBar {
    background: #2d3035;
}
aproch--ACaptionBar QPushButton[buttonType='window_controller'] {
    min-width: 46px;
    min-height: 32px;
    width: 46px;
    height: 32px;
}
aproch--ACaptionBar QPushButton[buttonType='window_controller']:hover {
    background: #373737;
}
aproch--ACaptionBar QPushButton[buttonType='window_controller']:pressed {
    background-color: #007acc;
}
aproch--AAvatar {
    qproperty-mstateenable: false;
    qproperty-mstatecolor: #1ee76e;
    font-size: 24px;
}

/** Prompt Widget */
aproch--APromptWidget {
    border-radius: 4px;
    background-color: #849ee3;
}
aproch--APromptWidget QLabel {
    font-size: 18px;
    color: #ffffff;
}
/* alert */
aproch--APromptWidget[promptType='0'] {
    background-color: #dd8797;
}

/** navigation bar */
aproch--ANavigationBar {
    max-width: 128px;
}
#aproch_navbar {
    /* set border only by object name */
    border: none;
}
#aproch_navbar_item {
    height: 64px;
}
#aproch_navbar_item:hover {
    background: #34373c;
}
#aproch_navbar_item:pressed {
    background: #3f4247;
}
#aproch_navbar_item:checked {
    color: white;
    background: #3f4247;
}
#aproch_navbar_trackbar {
    min-width: 4px;
    max-width: 4px;
    /* min-height: 26px;
    max-height: 26px; */
    border-radius: 2px;
    background: #4195f7;
}
#aproch_navbar_group {
    margin: 20px 0;
    color: #898fb3;
}

/**********************/
/** Modify Icon */
/**********************/
FileIconListWidget {
    background: #eff2f8;
    qproperty-spacing: 18;
}
FileIconListWidget::item {
    border-radius: 6px;
    padding: 1px;
}
FileIconListWidget::item:hover {
    border: 1px solid #cfd3da;
}

FileIconWidget {
    color: red;
    background: white;
    border-radius: 6px;
}

FileIconWidget #appiconwidget_pixmap {
    border-radius: 6px;
    background: #f4f7fc;
    padding: 12px;
}

/** test button */
QPushButton[buttonType='test'] {
    background: red;
    color: white;
    border: black;
}
